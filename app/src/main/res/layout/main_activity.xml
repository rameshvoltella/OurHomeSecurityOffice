<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/MainTitle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#008ec3">

            <!-- DrawerLayout Menu 여는 버튼 -->

            <Button
                android:id="@+id/btn_main_slide_open"
                android:layout_width="24dp"
                android:layout_height="20dp"
                android:layout_marginLeft="22.67dp"
                android:layout_marginTop="18dp"
                android:background="@drawable/btn_main_nav_click"/>

            <!-- 타이틀 제목 -->

            <ImageView
                android:layout_width="90dp"
                android:layout_height="15.67dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/img_main_title" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/MainContents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/MainTitle">

            <!-- 설치된 카메라 확인하기 텍스트 제목 -->

            <ImageView
                android:layout_width="126.67dp"
                android:layout_height="13dp"
                android:layout_marginLeft="14.33dp"
                android:layout_marginTop="16.33dp"
                android:src="@drawable/img_main_install_camera"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="#008ec3">

    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>

